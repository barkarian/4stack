{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "$root/*": [
        "./*"
      ]
    },
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}